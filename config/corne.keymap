#include <locale/keys_de_swiss.h>
#include <behaviors/mouse_keys.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/hid_usage.h>
#include <dt-bindings/zmk/hid_usage_pages.h>
#include <dt-bindings/zmk/modifiers.h>

#define CH_BACKSLASH (RA(ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_NON_US_BACKSLASH_AND_PIPE)))
#define CH_LEFT_BRACKET (RA(ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_LEFT_BRACKET_AND_LEFT_BRACE)))
#define CH_RIGHT_BRACKET (RA(ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_RIGHT_BRACKET_AND_RIGHT_BRACE)))
#define CH_LESS_THAN (ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_NON_US_BACKSLASH_AND_PIPE))
#define CH_GREATER_THAN (LS(ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_NON_US_BACKSLASH_AND_PIPE)))
#define CH_LEFT_BRACE (RA(ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_7)))
#define CH_RIGHT_BRACE (RA(ZMK_HID_USAGE(HID_USAGE_KEY, HID_USAGE_KEY_KEYBOARD_0)))

#define ZMK_MOUSE_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_MOUSE_DEFAULT_SCRL_VAL 20    // 10
#define U_MS_U &mmv MOVE_UP
#define U_MS_D &mmv MOVE_DOWN
#define U_MS_L &mmv MOVE_LEFT
#define U_MS_R &mmv MOVE_RIGHT

/ {
    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD0";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPS>;
        };

        mmv {
            acceleration-exponent = <1>;      // 1
            time-to-max-speed-ms = <900>;    // 40
            delay-ms = <0>;                   // 0
        };

        msc {
            acceleration-exponent = <1>;      // 0
            time-to-max-speed-ms = <400>;      // 500
            delay-ms = <0>;                   // 10
        };
    };

    rgb_encoder: rgb_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        label = "RGB_ENCODER";
        #sensor-binding-cells = <0>;
        bindings = <&rgb_ug RGB_BRI>, <&rgb_ug RGB_BRD>;
    };

    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <30>;
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "GALLIUM";

            // --------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |                ↑    |  Y  |  U   |  I  |  O  |  P  | BKSP |      &kp UP_ARROW 
            // | SHIFT |  A  |  S  |  D  |  F  |  G  |               ↓    |  H  |  J   |  K  |  L  |  ;  |  '   | 
            // | CTRL |  Z  |  X  |  C  |  V  |  B  |                ←    |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |                →    | ENT | RSE  | ALT |
            //                                                      enter

            bindings = <
&none             &kp DE_B  &kp DE_L           &kp DE_D               &kp DE_C             &kp DE_V      &kp UP_ARROW     &kp DE_J        &kp DE_Y              &kp DE_O                &kp DE_U            &kp DE_COMMA   &none
&mt K_CUT K_COPY  &mt LEFT_COMMAND DE_N  &mt LEFT_ALT DE_R  &mt LCTRL DE_T         &mt LEFT_SHIFT DE_S  &kp DE_G      &kp DOWN_ARROW   &kp DE_P        &mt RIGHT_SHIFT DE_H  &mt RIGHT_CONTROL DE_A  &mt RIGHT_ALT DE_E  &mt LEFT_COMMAND DE_I       &kp DE_SLASH
&kp INSERT        &kp DE_X  &kp DE_Q           &kp DE_M               &kp DE_W             &kp DE_Z      &kp LEFT_ARROW   &kp DE_K        &kp DE_F              &kp DE_APOSTROPHE       &kp DE_SEMICOLON    &kp DE_PERIOD  &kp ESCAPE
                         &kp C_PLAY_PAUSE       &lt 1 LEFT_COMMAND  &lt 2 DE_SPACE       &kp TAB    &kp RIGHT_ARROW  &lt 3 ENTER  &lt 4 BACKSPACE    &kp DELETE
                                                                                          &kp ENTER
            >;

            label = "GALLIUMv1";
            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;
        };

        media {
            bindings = <
&trans  &trans            &trans        &trans     &trans          &trans    &mmv MOVE_UP     &rgb_ug RGB_TOG    &rgb_ug RGB_EFF   &trans             &trans           &trans        &trans
&trans  &kp LEFT_COMMAND  &kp LEFT_ALT  &kp LCTRL  &kp LEFT_SHIFT  &trans    &mmv MOVE_DOWN   &ext_power EP_TOG  &kp C_PREVIOUS    &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp C_NEXT    &trans
&trans  &trans            &trans        &trans     &trans          &trans    &mmv MOVE_LEFT   &out OUT_TOG       &bt BT_SEL 0      &bt BT_SEL 1       &bt BT_SEL 2     &bt BT_SEL 3  &trans
                          &trans        &trans     &trans          &trans    &mmv MOVE_RIGHT  &trans             &kp C_PLAY_PAUSE  &kp C_MUTE
                                                                             &mkp LCLK
            >;

            label = "Media";
            sensor-bindings = <&scroll_encoder>;
        };

        nav {
            bindings = <
&trans  &trans            &trans        &trans     &trans          &trans    &mmv MOVE_UP     &trans        &trans    &trans         &trans       &trans     &trans
&trans  &kp LEFT_COMMAND  &kp LEFT_ALT  &kp LCTRL  &kp LEFT_SHIFT  &trans    &mmv MOVE_DOWN   &kp CAPSLOCK  &kp LEFT  &kp DOWN       &kp UP       &kp RIGHT  &trans
&trans  &trans            &trans        &trans     &trans          &trans    &mmv MOVE_LEFT   &kp INSERT    &kp HOME  &kp PAGE_DOWN  &kp PAGE_UP  &kp END    &trans
                          &trans        &trans     &trans          &trans    &mmv MOVE_RIGHT  &trans        &trans    &trans
                                                                             &mkp LCLK
            >;

            label = "Nav";
            sensor-bindings = <&scroll_encoder>;
        };

        sym {
            bindings = <
&trans  &kp DE_PIPE         &kp DE_AMPERSAND   &kp DE_ASTERISK     &kp CH_LEFT_BRACKET      &kp CH_RIGHT_BRACKET        &trans  &trans  &trans          &trans     &trans        &trans            &trans
&trans  &kp DE_COLON        &kp CH_LEFT_BRACE  &kp CH_RIGHT_BRACE  &kp DE_LEFT_PARENTHESIS  &kp DE_RIGHT_PARENTHESIS    &trans  &trans  &kp LEFT_SHIFT  &kp LCTRL  &kp LEFT_ALT  &kp LEFT_COMMAND  &trans
&trans  &kp DE_EXCLAMATION  &kp DE_GRAVE       &kp DE_QUESTION     &kp CH_LESS_THAN         &kp CH_GREATER_THAN         &trans  &trans  &trans          &trans     &trans        &trans            &trans
                         &trans          &trans           &kp EQUAL             &kp DE_MINUS                &trans  &trans  &trans          &trans
                                                                                                         &trans
            >;

            label = "Sym";
            sensor-bindings = <&scroll_encoder>;
        };

        num {
            bindings = <
&trans  &trans       &kp DE_N7  &kp DE_N8  &kp DE_N9  &kp DE_PLUS         &trans  &trans  &trans          &trans     &trans        &trans            &trans
&trans  &kp DE_PERCENT  &kp DE_N4  &kp DE_N5  &kp DE_N6  &kp DE_EQUAL        &trans  &trans  &kp LEFT_SHIFT  &kp LCTRL  &kp LEFT_ALT  &kp LEFT_COMMAND  &trans
&trans  &trans       &kp DE_N1  &kp DE_N2  &kp DE_N3  &kp CH_BACKSLASH    &trans  &trans  &trans          &trans     &trans        &trans            &trans
                     &trans        &kp DE_SLASH     &kp DE_N0  &kp DE_MINUS        &trans  &trans  &trans          &trans
                                                                                &trans
            >;

            label = "Num";
        };

        lower_layer {
            display-name = "NUMBER";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &kp N1           &kp N2          &kp N3        &kp N4        &kp N5             &mmv MOVE_UP     &kp N6           &kp N7           &kp N8           &kp N9           &kp N0    &kp BSPC
&trans  &bt BT_CLR_ALL   &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3       &mmv MOVE_DOWN   &kp LEFT         &kp DOWN         &kp UP           &kp RIGHT        &kp HOME  &kp PG_UP
&trans  &rgb_ug RGB_OFF  &rgb_ug RGB_ON  &trans        &trans        &rgb_ug RGB_EFF    &mmv MOVE_LEFT   &rgb_ug RGB_EFR  &rgb_ug RGB_SPI  &rgb_ug RGB_BRI  &rgb_ug RGB_BRD  &kp END   &kp PG_DN
                         &kp C_MUTE      &trans        &trans        &trans             &mmv MOVE_RIGHT  &kp INS          &kp DEL          &trans
                                                                                        &mkp LCLK
            >;

            label = "NUMBER";
            sensor-bindings = <&scroll_encoder>;
        };

        raise_layer {
            display-name = "SYMBOL";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &kp EXCL      &kp AT        &kp HASH   &kp DLLR   &kp PRCNT    &mmv MOVE_UP     &kp CARET  &kp AMPS   &kp ASTRK  &kp LPAR  &kp RPAR  &kp BSPC
&trans  &bt BT_CLR    &mkp LCLK     &mkp MCLK  &mkp RCLK  &mkp MB4     &mmv MOVE_DOWN   &kp MINUS  &kp EQUAL  &kp LBKT   &kp RBKT  &kp BSLH  &kp GRAVE
&trans  &out OUT_USB  &out OUT_BLE  &none      &none      &mkp MB5     &mmv MOVE_LEFT   &kp UNDER  &kp PLUS   &kp LBRC   &kp RBRC  &kp PIPE  &kp TILDE
                      &trans        &trans     &trans     &kp SPACE    &mmv MOVE_RIGHT  &kp RET    &trans     &trans
                                                                       &mkp LCLK
            >;

            label = "SYMBOL";
            sensor-bindings = <&scroll_encoder>;
        };

        layer_3 {
            display-name = "Fn";
            bindings = <
&trans  &kp F1      &kp F2      &kp F3       &kp F4     &kp F5      &mmv MOVE_UP     &kp F6       &kp F7     &kp F8       &kp F9      &kp F10          &kp F11
&trans  &trans      &mkp LCLK   &mkp MCLK    &mkp RCLK  &mkp MB4    &mmv MOVE_DOWN   &bootloader  &mkp LCLK  &mkp MCLK    &mkp RCLK   &kp PRINTSCREEN  &kp F12
&trans  &sys_reset  &trans      &bootloader  &trans     &mkp MB5    &mmv MOVE_LEFT   &trans       &trans     &bootloader  &sys_reset  &kp SCROLLLOCK   &kp PAUSE_BREAK
                    &kp C_MUTE  &trans       &trans     &trans      &mmv MOVE_RIGHT  &trans       &trans     &trans
                                                                    &mkp LCLK
            >;

            label = "FN";
            sensor-bindings = <&scroll_encoder>;
        };
    };
};
